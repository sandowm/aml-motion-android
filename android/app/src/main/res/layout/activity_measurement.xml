<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".measurement">

    <ImageButton
        android:id="@+id/btnSettings2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleGyro"
        app:layout_constraintEnd_toStartOf="@+id/x_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <TextView
        android:id="@+id/x_txt_g"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="485dp"
        android:text="X"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/switchProblem"
        app:layout_constraintEnd_toEndOf="@+id/y_txt_g"
        app:layout_constraintStart_toStartOf="@+id/y_txt_g"
        app:layout_constraintTop_toBottomOf="@+id/y_txt" />

    <TextView
        android:id="@+id/z_txt_g"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="Z"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleAcc"
        app:layout_constraintStart_toStartOf="@+id/txtServerResponse"
        app:layout_constraintTop_toBottomOf="@+id/y_txt_g" />

    <TextView
        android:id="@+id/txtTitleGyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/x_txt_g"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/y_txt_g"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:text="Y"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/z_txt_g"
        app:layout_constraintStart_toStartOf="@+id/z_txt_g"
        app:layout_constraintTop_toBottomOf="@+id/x_txt_g" />

    <TextView
        android:id="@+id/x_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="46dp"
        android:text="X"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/y_txt"
        app:layout_constraintEnd_toEndOf="@+id/y_txt"
        app:layout_constraintStart_toStartOf="@+id/y_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/len_txt"
        android:layout_width="175dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:text="X"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchProblem" />

    <TextView
        android:id="@+id/y_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="54dp"
        android:text="Y"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/x_txt_g"
        app:layout_constraintEnd_toEndOf="@+id/z_txt"
        app:layout_constraintStart_toStartOf="@+id/z_txt"
        app:layout_constraintTop_toBottomOf="@+id/x_txt" />

    <TextView
        android:id="@+id/txtTitleAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/x_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/z_txt"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:text="Z"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleGyro"
        app:layout_constraintEnd_toEndOf="@+id/x_txt_g"
        app:layout_constraintStart_toStartOf="@+id/x_txt_g"
        app:layout_constraintTop_toBottomOf="@+id/x_txt" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtServerResponse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStart"
        app:layout_constraintTop_toBottomOf="@+id/z_txt_g"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtServerResponse"
        app:layout_constraintEnd_toStartOf="@+id/btnSave"
        app:layout_constraintStart_toEndOf="@+id/btnPause"
        app:layout_constraintTop_toBottomOf="@+id/z_txt_g"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/txtServerResponse"
        app:layout_constraintEnd_toStartOf="@+id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/z_txt_g"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <Switch
        android:id="@+id/switchProblem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="41dp"
        android:checked="false"
        android:text="Mark Problem"
        app:layout_constraintBottom_toTopOf="@+id/len_txt"
        app:layout_constraintStart_toStartOf="@+id/len_txt"
        app:layout_constraintTop_toBottomOf="@+id/x_txt_g"
        tools:checked="false" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="33dp"
        android:text="Data points collected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtServerResponse" />

    <TextView
        android:id="@+id/txtServerResponse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="83dp"
        android:text="Last Server Response:"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPause" />

</androidx.constraintlayout.widget.ConstraintLayout>